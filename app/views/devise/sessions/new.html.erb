<div class="smaller-form">
  <div id="logo" class="logo">
    <h3 class="margin-clear text-center">
      <%= link_to root_path, class: 'logo-font link-light' do %>
          Sub<span class="text-default">Line</span>
    </h3>
  </div>
  <% end %>
  <p class="small text-center">Teacher/Substitute Management System</p>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn-primary' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
